{
  "password_policy": {
    "min_length": 8,
    "character_requirements": {
      "uppercase": {
        "required": true,
        "min_count": 1
      },
      "numbers": {
        "required": true,
        "min_count": 1
      },
      "special_chars": {
        "required": true,
        "min_count": 1,
        "allowed_chars": "-_.!@#$%^&*()+=<>Â¿?"
      }
    }
  },
  "name_policy": {
    "min_length": 2,
    "character_requirements": {
      "numbers": {
        "allowed": false
      },
      "special_chars": {
        "allowed": false,
        "allowed_special_chars": " "
      }
    }
  },
  "email_policy": {
    "min_length": 5,
    "max_length": 254,
    "valid_domains": ["gmail.com", "hotmail.com", "yahoo.com", "outlook.com", "mahle.com"]
  }
}